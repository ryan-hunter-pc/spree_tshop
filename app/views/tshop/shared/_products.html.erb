<div id="products" class="row categoryProduct xsResponse clearfix" data-hook>

  <% products.each do |product| %>
    <div class="col-sm-4 col-lg-4 col-md-4 col-xs-6 product-list-item">
      <%= render partial: 'tshop/shared/product', locals: {product: product} %>
    </div>
  <% end %>

  <% reset_cycle("classes") %>
</div>

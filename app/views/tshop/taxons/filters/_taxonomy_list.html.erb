<div class="panel panel-flat taxonomy_list">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" href="#collapseTaxonomy<%= taxonomy.name %>" class="">
                <span class="pull-right hasMinus"> <i class="i-minus"></i></span>
                <%= Spree.t(:shop_by_taxonomy, :taxonomy => taxonomy.name) %>
            </a>
        </h4>
    </div>
    <div id="collapseTaxonomy<%= taxonomy.name %>" class="panel-collapse collapse in">
        <div class="panel-body">
            <%= tshop_taxons_tree(taxonomy.root, taxon, max_level) %>
        </div>
    </div>
</div>
